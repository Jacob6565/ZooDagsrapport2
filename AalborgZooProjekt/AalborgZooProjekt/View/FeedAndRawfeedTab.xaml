<UserControl x:Class="AalborgZooProjekt.View.FeedAndRawfeedTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AalborgZooProjekt.View"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">
    <Grid>
        <TabControl Margin="10,0,0,0">
            <TabItem Header="Foder" Padding="20,0">
                <TabItem.Style>
                    <Style>
                        <Setter Property="TextBlock.FontSize" Value="14"></Setter>
                    </Style>
                </TabItem.Style>
                <Grid>
                    <local:FruitFoodList/>
                </Grid>
            </TabItem>

            <TabItem Header="Kraftfoder" Padding="20,0">
                <TabItem.Style>
                    <Style>
                        <Setter Property="TextBlock.FontSize" Value="14"></Setter>
                    </Style>
                </TabItem.Style>
                <Grid>
                    <local:OtherFoodList/>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>

</UserControl>
