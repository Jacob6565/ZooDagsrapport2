<Window x:Class="AalborgZooProjekt.View.OfficeWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AalborgZooProjekt.View"
        mc:Ignorable="d"
        Title="Kontor - Foderbestillinger" Height="750" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="85"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="top_btn_1" Content="Oversigt" Grid.Row="0" Grid.Column="0" Margin="10,10,5,0" VerticalAlignment="Top" Height="80"/>
            <Button x:Name="top_btn_2" Content="Foderbestillinger" Grid.Row="0" Grid.Column="1" Margin="5,10,5,0" Height="80" VerticalAlignment="Top"/>
            <Button x:Name="top_btn_3" Content="Praktiske Opgaver" Grid.Row="0" Grid.Column="2" Margin="5,10,10,0" Height="80" Padding="0" VerticalAlignment="Top"/>
        </Grid>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="75"/>
            </Grid.ColumnDefinitions>
            <!--  -->

            <Border BorderBrush="Black" BorderThickness="1" Margin="10,27,10,0" Padding="0" Grid.Column="1" Height="152" VerticalAlignment="Top" >
                <StackPanel Grid.Column="1" Margin="5">
                    <TextBlock Margin="10,0" Height="33" VerticalAlignment="Top" TextAlignment="Center" FontSize="24" Text="Ubehandlede bemærkninger"/>
                    <Expander x:Name="expander"  Margin="15,5,15,10" Padding="5" HorizontalContentAlignment="Stretch" FlowDirection="LeftToRight" Height="95" VerticalContentAlignment="Top" VerticalAlignment="Top">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="5,0" Width="693" VerticalAlignment="Top">Afrika</TextBlock>
                                <CheckBox VerticalAlignment="Center" Margin="5,0" HorizontalContentAlignment="Right" Width="40.3" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Expander.Header>
                        <Grid Background="#FFE5E5E5"/>
                    </Expander>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="75"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="all_btn" Content="Samlet" Margin="10,50,5,5" VerticalAlignment="Top" Height="25" Width="150" HorizontalAlignment="Left" Grid.Column="1"/>
            <Button x:Name="fruit_btn" Content="Frugt" Margin="165,50,0,5" VerticalAlignment="Top" Height="25" HorizontalAlignment="Left" Width="150" Grid.Column="1"/>
            <Button x:Name="compound_feed_btn" Content="Kraftfoder" Margin="320,50,0,5" VerticalAlignment="Top" RenderTransformOrigin="0.715,-3.54" Height="25" HorizontalAlignment="Left" Width="150" Grid.Column="1"/>

            <Label x:Name="label" Content="Alle bestillinger uge 45" Margin="5,10,10,0" VerticalAlignment="Top" FontSize="24" Height="42" Grid.Column="1" HorizontalContentAlignment="Stretch"/>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="75"/>
            </Grid.ColumnDefinitions>


            <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.833,-6.231" Height="217" Width="510" Grid.Column="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Vare" Binding="{Binding Ware}" Width="240*"/>
                    <DataGridTextColumn Header="Antal" Binding="{Binding Quantity}" Width="50*"/>
                    <DataGridTextColumn Header="Enhed" Binding="{Binding Unit}" Width="55*"/>
                    <DataGridTextColumn Header="Bestilt" Binding="{Binding Ordered}" Width="60*"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
        
    </Grid>
</Window>
