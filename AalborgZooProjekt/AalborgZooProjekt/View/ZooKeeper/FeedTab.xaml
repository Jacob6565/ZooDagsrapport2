<UserControl x:Class="AalborgZooProjekt.View.FeedTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AalborgZooProjekt.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700"
             DataContext="{Binding Zoo, Source={StaticResource Locator}}">
    <Grid>
        <Grid Background="#FFE5E5E5">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" MinWidth="300"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Viewbox Margin="10,5,0,5"
                                    HorizontalAlignment="Left">
                        <TextBlock Text="{Binding Department, StringFormat='{}{0}'}" />
                    </Viewbox>
                    <local:FeedAndRawfeedTab  Grid.Row="1"/>
                </Grid>
                <local:OrderList Grid.Column="2"/>
            </Grid>

            <GridSplitter Grid.Row="1"
                                          Height="10"
                                          HorizontalAlignment="Stretch"/>

            <!--<Grid x:Name="ExpanderGrid"
                                  Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Expander x:Name="BemærkningerExpander" Header="Bemærkninger" 
                                          Margin="0,2">
                    <Grid>
                        <TextBox x:Name="BemærkningerExpanderTextbox" 
                                        TextWrapping="WrapWithOverflow" 
                                        VerticalScrollBarVisibility="Auto"/>
                    </Grid>
                </Expander>

                <Expander x:Name="MedarbejderExpander" Header="Medarbejder" 
                                          Margin="0,2" 
                                          Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <CheckBox Content="Medarbejder 1" Grid.Column="0"/>
                        <CheckBox Content="Medarbejder 2" Grid.Column="1"/>
                        <CheckBox Content="Medarbejder 3" Grid.Column="2"/>
                        <CheckBox Content="Medarbejder 4" Grid.Column="3"/>
                    </Grid>
                </Expander>
            </Grid>-->
            <StackPanel Orientation="Vertical" Grid.Row="2">
                <Grid x:Name="ExpanderGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Expander x:Name="BemærkningerExpander" Header="Bemærkninger" 
                                              Margin="0,2">
                        <Grid>
                            <TextBox x:Name="BemærkningerExpanderTextbox"
                                            TextWrapping="Wrap" 
                                            VerticalScrollBarVisibility="Auto" Height="50"/>
                        </Grid>
                    </Expander>

                    <Expander x:Name="MedarbejderExpander" Header="Medarbejder" 
                                              Margin="0,2" 
                                              Grid.Row="1">
                        <Grid Height="75">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <RadioButton Style="{StaticResource {x:Type ToggleButton}}" Content="Medarbejder 1" Grid.Column="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="10"/>
                            <RadioButton Style="{StaticResource {x:Type ToggleButton}}" Content="Medarbejder 2" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="10"/>
                            <RadioButton Style="{StaticResource {x:Type ToggleButton}}" Content="Medarbejder 3" Grid.Column="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="10"/>
                            <RadioButton Style="{StaticResource {x:Type ToggleButton}}" Content="Medarbejder 4" Grid.Column="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="10"/>
                        </Grid>
                    </Expander>
                </Grid>
            </StackPanel>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                <Button Command ="{Binding SendOrderCommand}" Content="Bestil" 
                                        Margin="5,0" Padding="50,0"
                                        Grid.Column="2"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
